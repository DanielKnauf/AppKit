<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- dimensions -->
    <dimen name="arch_horizontal_divider_default_height">0.5dp</dimen>
    <dimen name="arch_horizontal_divider_default_margin">0dp</dimen>
    <dimen name="arch_horizontal_divider_default_padding">0dp</dimen>

    <!-- color -->
    <color name="arch_horizontal_divider_line_default_color">@android:color/black</color>
    <color name="arch_horizontal_divider_background_default_color">@android:color/white</color>

    <!-- style -->
    <style name="ArchHorizontalDividerContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ArchHorizontalDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
